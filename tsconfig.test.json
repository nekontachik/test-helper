{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "jest.setup.ts",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "hooks/**/*.test.ts",
    "hooks/**/*.test.tsx"
  ],
  "exclude": ["node_modules"]
}
